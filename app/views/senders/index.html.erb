<p id="notice"><%= notice %></p>

<h1>Senders</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Zipcode</th>
      <th>County</th>
      <th>District</th>
      <th>State</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @senders.each do |sender| %>
      <tr>
        <td><%= sender.name %></td>
        <td><%= sender.zipcode %></td>
        <td><%= sender.county %></td>
        <td><%= sender.district %></td>
        <td><%= sender.state %></td>
        <td><%= sender.user_id %></td>
        <td><%= link_to 'Show', sender %></td>
        <td><%= link_to 'Edit', edit_sender_path(sender) %></td>
        <td><%= link_to 'Destroy', sender, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sender', new_sender_path %>
