<%= form_with(model: recipient) do |form| %>
  <% if recipient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(recipient.errors.count, "error") %> prohibited this recipient from being saved:</h2>

      <ul>
        <% recipient.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="field">
	<%= form.label :name %>
	<%= form.text_field :name, class: 'form-control' %>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-4">      
      <div class="field">
	<%= form.label :level %>
	<%= form.select :level,
	    [['Local', 'local'],
	    ['State', 'state'],
	    ['Federal', 'federal']],
	    { include_blank: true }, { class: 'form-control' } %>
      </div>
    </div>    

    <div class="col-md-4">      
      <div class="field">
	<%= form.label :position %>
	<%= form.select :position,
	    [['Representative', 'representative'],
	    ['Senator', 'senator'],
	    ['Governor', 'governor'],
	    ['Attorney General', 'attorney_general'],
	    ['Secretary of State', 'secretary_of_state']],
	    { include_blank: true }, { class: 'form-control' } %>

      </div>
    </div>

    <div class="col-md-4">      
      <div class="field">
	<%= form.label :state %>
	<%= form.select :state,
	    [['Alabama', 'AL'],
	    ['Alaska', 'AK'],
	    ['Arizona', 'AZ'],
	    ['Arkansas', 'AR'],
	    ['California', 'CA'],
	    ['Colorado', 'CO'],
	    ['Connecticut', 'CT'],
	    ['Delaware', 'DE'],
	    ['Florida', 'FL'],
