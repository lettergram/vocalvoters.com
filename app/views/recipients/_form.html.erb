	    { include_blank: true }, { class: 'form-control' } %>
      </div>
    </div>
    
    <div class="col-md-4 col-md-offset-2">    
      <div class="field">
	<%= form.label :district %>
	<%= form.text_field :district, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="field">
	<%= form.label :retirement_status %>
	<%= form.select :retired,
	    [['Active', false], ['Retired', true]],
	    { include_blank: true }, { class: 'form-control' } %>
      </div>
    </div>
    
    <div class="col-md-12">
      <hr>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-6">
      <div class="field">
